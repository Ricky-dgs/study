<div style='text-align: center'>
    <h1>显示全部班级</h1>
 <%= link_to '添加班级', new_grade_path %>

<table>
  <tr>
    <th>班级ID</th>
    <th>班级名称</th>
    <th colspan="2"></th>
  </tr>
 
<% @grades.each do |grade| %>
  <tr>
    <td><%= grade.id %></td>
    <td><%= grade.name %></td>
    <td><%= link_to '显示', grade_path(grade) %></td>
    <td><%= link_to '修改', edit_grade_path(grade) %></td>
    <td><%= link_to '删除', grade_path(grade),
                    method: :delete, data: { confirm: '确定删除?' } %></td>
    <td><%= link_to '查看学生', all_stu_grade_path(grade) %></td>                
  </tr>
<% end %>
</table>
<%= link_to '返回管理页面', manager_index_path %>

</div>